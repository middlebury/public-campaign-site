{% extends "layout.twig" %}

{% block page_header %}
  {% include 'partials/page-header.twig' with {
    title: 'Argentina',
    image_src: true,
    has_menu: true
  } %}
{% endblock %}

{% block layout_header %}
  {% include 'partials/campaign-header.twig' with {
    is_sticky: true
  }%}
{% endblock %}

{% block page %}
  {% include 'partials/top-level-layout.twig' with {
    show_menu: true,
    show_lead: true,
    has_page_image: true,
    theme: 'access'
  } %}  
{% endblock %}

{% block layout_footer %}
    {% include 'partials/campaign-footer.twig' %}
{% endblock %}

{% block layout_before_body_close %}
    {% embed 'partials/drawer.twig'
    with {
      title: 'Navigation'
    }
  %}
    {% block content %}
      {% include 'partials/drawer-nav.twig' %}
    {% endblock %}
  {% endembed %}
{% endblock %}
