<div class="campaign-stats">
  <div class="container">

    {% for item in items %}

      <div class="campaign-stats__chart col-8 m-auto px-0">

        {% if item.title %}
          <h3 class="h2 mb-3">{{item.title}}</h3>
        {% endif %}

        {% include 'partials/chart.twig' with item %}
        
      </div>
      {% if loop.first %}
        <hr>
      {% endif %}
    {% endfor %}
    <p class="campaign-stats__date col-8 m-auto px-0">As of <time datetime="2023-08-21">August 21, 2023</time></p>
  </div>
</div>
