{% extends "campaign-basic-content.twig" %}

{% set page_title = 'This is a story' %}

{% block page %}
  {% embed 'partials/sidebar-layout.twig' %}
    {% block nav %}
      {# header to display on mobile and tablet #}
      {% include 'partials/page-header.twig' with {
        title: page_title,
        basic_level: true,
        class: 'd-lg-none pl-3 pl-md-0'
      } %}
      {% include 'partials/page-nav.twig' with {
        label: page_title,
        theme: 'story',
        items: [
          { text: page_title, href: '#' },
          { text: 'Your Impact', href: '#', active: true },
          { text: 'By the numbers', href: '#' },
          { text: 'Big opportunities', href: '#' }
        ]
      } %}

    {% endblock %}
    {% block content %}
      {# header to display on desktop #}
      {% include 'partials/page-header.twig' with {
        title: page_title,
        basic_level: true,
        class: 'd-none d-lg-block'
      } %}
      {% include 'partials/story-content.twig' with {
        featured: random(['portrait-video', 'video', 'image', 'audio'])
      }%}
    {% endblock %}
  {% endembed %}
{% endblock %} 