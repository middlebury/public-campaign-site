{% set id = random(1234) %}
<!-- video iframe html should be escaped -->
<figure class="video js-video" data-video='<iframe src="https://player.vimeo.com/video/221201240?autoplay=1" width="400" height="225" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen allow="autoplay"></iframe>'>
  <div class="video__content js-video-content">
    <a href="https://player.vimeo.com/video/221201240" class="js-video-link video__link" role="button" aria-label="Play video" aria-describedby="midd-video-label-{{id}}">
      {% include 'partials/img.twig' with { name: 'video', lazy: lazy } %}
      <button class="video__button">
        <span class="video__play-button">
          Play
          <span class="ml-3">
            {% include 'partials/icon.twig' with {
              name: 'play',
              class: 'video-button'
            } %}
          </span>
        </span>
        <span class="video__duration" aria-label="3 minutes, 27 seconds">03:27</span>
      </button>
    </a>
  </div>
  <figcaption class="video__body">
    {% if not no_title %}
      <h3 class="video__title" id="midd-video-label-{{id}}">Practical Skills for Positive Change</h3>
    {% endif %}
    {% if not hide_caption_text %}
      <p class="video__text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque viverra aliquet lacus a tristique.
        <a href="">Suspendisse commodo</a>
        pulvinar nisi vel laoreet. Pellentesque id hendrerit velit, vitae consectetur libero.</p>
    {% endif %}
    {% if not no_transcript %}
      {% include 'partials/transcript.twig' with { id: id, class: 'grid-video__transcript' } %}
    {% endif %}
  </figcaption>
</figure>
