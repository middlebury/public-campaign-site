<figure class="media media--image media--contain-caption">
  <!-- {{name}} -->
  {% include 'partials/img.twig' with {
    name: name
  } %}
  {% if not no_caption %}
    <figcaption class="media__caption">
      {{
        caption|default(
          'Lorem ipsum dolor sit amet, consectetur adipiscing elit (Photo: John Doe)'
        )
      }}
    </figcaption>
  {% endif %}
</figure>
