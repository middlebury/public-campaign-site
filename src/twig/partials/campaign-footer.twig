<footer class="midd-footer">
    <h2 class="sr-only">Additional Navigation</h2>

    <div class="container">
        <div class="row">
            <div class="mt-2 mb-5 mb-md-4 mb-lg-0 mt-lg-0 col-lg-3">
                <a href="https://www.middlebury.edu">
                    <img src="img/middlebury-logo-white.svg" 
                        alt="Middlebury"
                        width="195"
                        height="71"
                    />
                </a>
            </div>
            <div class="col-lg-9">
                {% if social_links %}
                    <div class="midd-footer__right">
                {% endif %}
                        <ul class="midd-footer__links">
                            {% for link in campaign_footer %}
                                <li>
                                    <a href="{{link.href}}">{{link.text}}</a>
                                </li>
                            {% endfor %}
                        </ul>
                        {% if social_links %}
                            {% include 'partials/social-links.twig' with {
                                class: "midd-footer__social-links",
                                items: social_links,
                                light: true
                            } %}
                        {% endif %}
                {% if social_links %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</footer>