{% extends "layout.twig" %}

{% block layout_header %}
    {% include 'partials/campaign-header.twig' %}
{% endblock %}

{% block page %}
    {% include 'partials/campaign-section.twig' with {
        name: 'intro',
        background_video: 'https://www.middlebury.edu/sites/www.middlebury.edu/files/campaign/BAxTakeCareofHome.mp4'
    } %}
    {% include 'partials/campaign-section.twig' with {
        name: 'pillars'
    }%}
    {% include 'partials/campaign-section.twig' with {
        name: 'video-group'
    } %}
{% endblock %}

{% block layout_footer %}
    {% include 'partials/campaign-footer.twig' %}
{% endblock %}

{% block layout_before_body_close %}
    {% embed 'partials/drawer.twig'
    with {
      title: 'Navigation'
    }
  %}
    {% block content %}
      {% include 'partials/drawer-nav.twig' %}
    {% endblock %}
  {% endembed %}
{% endblock %}
