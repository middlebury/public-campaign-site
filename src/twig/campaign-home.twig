{% extends "layout.twig" %}

{% block layout_header %}
    {% include 'partials/campaign-header.twig' %}
{% endblock %}

{% block page %}
    {% include 'partials/campaign-section.twig' with {
        name: 'intro',
        background_video: 'https://player.vimeo.com/progressive_redirect/playback/827016634/rendition/1080p/file.mp4?loc=external&signature=c3a2a7c399cca676a461c669c502d16d0ea1c90e92dfbdc61a242766ca58ca7b'
    } %}
    {% include 'partials/campaign-section.twig' with {
        name: 'pillars'
    }%}
    {% include 'partials/campaign-section.twig' with {
        name: 'video-group'
    } %}
{% endblock %}

{% block layout_footer %}
    {% include 'partials/campaign-footer.twig' %}
{% endblock %}

{% block layout_before_body_close %}
    {% embed 'partials/drawer.twig'
    with {
      title: 'Navigation'
    }
  %}
    {% block content %}
      {% include 'partials/drawer-nav.twig' %}
    {% endblock %}
  {% endembed %}
{% endblock %}
