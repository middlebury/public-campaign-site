{% extends "layout.twig" %}

{% block layout_header %}
    {% include 'partials/campaign-header.twig' %}
{% endblock %}

{% block page %}
    {% include 'partials/campaign-section.twig' with {
        name: 'intro',
        background_video: 'https://player.vimeo.com/progressive_redirect/playback/862522756/rendition/360p/file.mp4?loc=external&signature=3b32d3218c4daa0419a38f3c3742732083b8fe597fca6d7eaef8c741b4788dad'
    } %}
    {% include 'partials/campaign-section.twig' with {
        name: 'video-group'
    } %}
    {% include 'partials/campaign-section.twig' with {
        name: 'pillars',
        dark_header: true
    }%}
    {% include 'partials/campaign-section.twig' with {
        name: 'mega-cta-panel',
        text: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.',
        background_image: true
    } %}
    {% include 'partials/campaign-section.twig' with {
      name: 'homepage-stats',
      dark_header: true
    } %}
{% endblock %} 

{% block layout_footer %}
    {% include 'partials/campaign-footer.twig' %}
{% endblock %}

{% block layout_before_body_close %}
    {% embed 'partials/drawer.twig'
    with {
      title: 'Navigation'
    }
  %}
    {% block content %}
      {% include 'partials/drawer-nav.twig' %}
    {% endblock %}
  {% endembed %}
{% endblock %}
